<?php $messages = $flash->getMessages(); ?>
<?php if (!empty($messages)) : ?>
    <?php foreach ($messages as $type => $typeMessages) : ?>
        <?php foreach ($typeMessages as $message) : ?>
            <div class="alert alert-<?= $type ?>" role="alert"><?= htmlspecialchars($message) ?></div>
        <?php endforeach; ?>
    <?php endforeach; ?>
<?php endif; ?>